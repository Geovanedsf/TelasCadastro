<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.FragmentRequest">

    <TextView
        android:id="@+id/AppointedService"
        android:layout_width="188dp"
        android:layout_height="38dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPostalAddressService"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/editTextTextPostalAddressService"
        android:layout_width="331dp"
        android:layout_height="43dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Endereço onde o serviço será prestado"
        android:inputType="textPostalAddress"
        app:layout_constraintBottom_toTopOf="@+id/editTextDateService"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AppointedService"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/editTextDateService"
        android:layout_width="267dp"
        android:layout_height="40dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Data da solicitação"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/editTextTimeService"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPostalAddressService"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/editTextTimeService"
        android:layout_width="182dp"
        android:layout_height="39dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Horário"
        android:inputType="time"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDateService"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTimeService"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>